pub(crate) fn create_bin_with_executables(
    temp_dir: &assert_fs::TempDir,
    python_versions: &[&str],
) -> Result<PathBuf> {
    let bin = temp_dir.child("bin");
    fs_err::create_dir(&bin)?;
